{
  "AllowedHosts": "*",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Trace",
      "System": "Information",
      "Microsoft": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error"
    }
  },
  "general": {
    "name": "FollowUP",
    "seedData": true
  },
  "jwt": {
    "issuer": "https://localhost:5000",
    "audience": "https://localhost:5000",
    "expiryMinutes": 5
  },
  "sql": {
    "inMemory": false
  },
  "promotion": {
    "enabled": true,
    "useProxy": true,
    "useLocalProxy":  false,
    "updateComments": false,
    "startingHour": 9,
    "endingHour": 23,
    "minActionIntervalLimit": 3000,
    "maxActionIntervalLimit": 80000,
    "promotionKey": "-latest-promotion"
  },
  "email": {
    "sendVerificationMail": false,
    "sendFromEmail": "biuro@followup.social",
    "sendFromName": "FollowUP"
  },
  "api": {
    "dashboardBaseUrl": "app.followup.social",
    "apiBaseUrl": "followup.social/api/"
  },
  "instaLogger": {
    "logLevel": 0,
    "logToFile": true
  }
}
